

<div class="content-form">
    <h3>Bir yorum yapın</h3>
    
    <form method="post">
        <input type="hidden" placeholder="ID" name="BlogID" value="@ViewBag.deger" required />
        <input type="text" placeholder="Kullanıcı Adı giriniz" name="UserName" required />
        <input type="text" placeholder="Email giriniz" name="Mail" required />
        <textarea placeholder="Yorum yazınız" name="PersonComment"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>

